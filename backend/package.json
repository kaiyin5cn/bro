{
  "name": "url-shortener-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "node scripts/dev-setup.js",
    "setup:replica": "node scripts/dev-setup.js --replica",
    "setup:auth": "npm install && node scripts/create-admin.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:controller": "node --experimental-vm-modules node_modules/jest/bin/jest.js urlController.test.js",
    "test:utils": "node --experimental-vm-modules node_modules/jest/bin/jest.js integration.test.js",
    "test:shortcode": "node --experimental-vm-modules node_modules/jest/bin/jest.js shortCode.enhanced.test.js",
    "load-test": "node load-tests/run-load-test.js",
    "stress-test": "node load-tests/stress-test.js",
    "workflow-test": "node load-tests/full-workflow-test.js",
    "generate-examples": "node scripts/generate-examples.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.18.0",
    "redis": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
